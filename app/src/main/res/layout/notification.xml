<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_button"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false">

        <ImageView
            android:id="@+id/broadcasticon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_notification" />

        <TextView
            android:id="@+id/notititle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/broadcasticon"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="11dp"
            android:paddingStart="11dp"
            android:text="Notification Title"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/broadcastcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notititle"
            android:layout_toRightOf="@id/broadcasticon"
            android:paddingLeft="11dp"
            android:paddingStart="11dp"
            android:paddingTop="2dp"
            android:text="info has frame id not trip id;use icon of marker at arrival and deparure;use icon of bus on road"
            android:textColor="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/broadcastcontent"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/broadcasticon"
            android:paddingLeft="11dp"
            android:paddingStart="11dp">

            <ImageView
                android:id="@+id/timeicon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_clock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/timeicon"
                android:layout_toRightOf="@id/timeicon"
                android:text="Mon, 29 Sep 2018"
                android:textColor="@android:color/darker_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_below="@id/timeicon"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>